<!-- ##### Contact Area Start ##### -->
<section class="contact-area">
    <div class="container">
        <div class="row">
            <!-- Contact Info -->
            <div class="col-12 col-lg-6">
                <div class="contact--info mt-50 mb-100">
                    <h4>İletişim Bilgileri</h4>
                    <ul class="contact-list">
                        <li>
                            <h6><i class="fa fa-phone" aria-hidden="true"></i> Telefon</h6>
                            <h6>+90 530 303 0266</h6>
                        </li>
                        <li>
                            <h6><i class="fa fa-envelope" aria-hidden="true"></i> Email</h6>
                            <h6>info@altay.com</h6>
                        </li>
                        <li>
                            <h6><i class="fa fa-map-pin" aria-hidden="true"></i> Adres</h6>
                            <h6>10 sokak Bornoca, İzmir, Tr</h6>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="col-12 col-lg-6">
                <div class="contact-form">
                    <h4>Bizimle İletişime Geçin</h4>

                    <form action="#" method="post">
                        <div class="row">
                            <div class="col-12 col-lg-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="text" placeholder="İsminiz">
                                </div>
                            </div>
                            <div class="col-12 col-lg-6">
                                <div class="form-group">
                                    <input type="email" class="form-control" id="email" placeholder="Email">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <textarea name="message" class="form-control" id="message" cols="30" rows="10" placeholder="Mesajınız"></textarea>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn clever-btn w-100">Gönder</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

