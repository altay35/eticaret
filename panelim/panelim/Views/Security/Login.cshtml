@model panelim.Models.Kullanici

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Kullanıcı Girişi</title>
    <!-- Bootstrap Core CSS -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <!-- MetisMenu CSS -->
    <link href="~/Content/css/metisMenu.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/Content/css/sb-admin-2.css" rel="stylesheet" />
    <!-- Custom Fonts -->
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->


</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading"  style="background-color: #5cb85c">
                        <h3 class="panel-title">Lütfen Giriş Yapın</h3>
                       

                    </div>
                    <div class="panel-body">
                        <form class="form" action="" method="post">
                            <font color="@ViewBag.color">@ViewBag.Mesaj</font>
                            <fieldset>

                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.KullaniciAdi, new { @class = "form-control", placeholder = "Kullanıcı Adı", autocomplete = "off" })
                                    @Html.ValidationMessageFor(m => m.KullaniciAdi, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Parola, new { @class = "form-control", placeholder = "Parola", Type = "Password" })
                                    @Html.ValidationMessageFor(m => m.Parola, "", new { @class = "text-danger" })
                                </div>
                                @*<div class="form-group" id="temp">

                                    @Html.DropDownList("TempId", (SelectList)ViewData["TempId"], "Lütfen bir template seçiniz...", new { @class = "form-control", id = "temp" })
                                    @Html.ValidationMessageFor(model => model.TempId, "", new { @class = "text-danger" })
                                 

                                </div>*@
                                <div class="checkbox">
                                    <label>
                                        <input name="remember" type="checkbox" value="Beni Hatırla">Beni Hatırla
                                    </label>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <button class="btn btn-success" id="btnSubmit" type="submit">Giriş</button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- jQuery -->
    <script src="~/Scripts/jquery.min.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- Metis Menu Plugin JavaScript -->
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/metisMenu.min.js"></script>
    <!-- Custom Theme JavaScript -->
    <script src="~/Scripts/sb-admin-2.js"></script>

</body>
</html>
