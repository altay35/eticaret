@model panelim.Models.tblForm

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel-heading">
    <h3> Formlar <i class="fa fa-angle-double-right"> </i> Yeni Form Ekle </h3>
</div>

<div class="panel-body">
    @using (Html.BeginForm("Create", "tblForm", FormMethod.Post))
    {

        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div>
                @Html.ActionLink("Geri Dön", "Index")
            </div>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.FormAdi, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.FormAdi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FormAdi, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-2">
                    <input type="submit" value="Kaydet" class="btn btn-success" />
                </div>
            </div>
       





        </div>
    }
</div>